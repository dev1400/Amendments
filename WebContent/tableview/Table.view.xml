<mvc:View
	controllerName="sap.ui.demo.myFiori.tableview.Table"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Label text="{i18n>Heading}"></Label>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="{i18n>TableHeading1}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>TableHeading2}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<Text text="{i18n>TableHeading3}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>TableHeading4}" />
			</Column>
			<Column
				hAlign="Right">
				<Text text="{i18n>TableHeading5}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{AmendmentType}"
						text="{AmendmentId}"
						class="sapMTableContentMargin" />
					<ObjectIdentifier
						title="{DealDescription}"
						text="{DealId}"
						class="sapMTableContentMargin" />
					<ObjectIdentifier
						title="{CustomerName}"
						text="{i18n>Customeron} {Date} {i18n>Customerfrom} {System} "
						class="sapMTableContentMargin" />
						
				    <c:Icon src="sap-icon://popup-window" press="handlePopoverPress"/>
					
					<c:Icon src="sap-icon://workflow-tasks" press="handleWorkFlowPress"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>